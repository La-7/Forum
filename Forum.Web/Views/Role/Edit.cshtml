@using Microsoft.AspNetCore.Identity
@model Forum.Web.Models.Role.ChangeRoleModel

<h2>Changing the role for @Model.UserEmail user</h2> 

<form asp-controller="Role" asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>