@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>List of roles</h2>

<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-controller="Role" asp-action="Create" method="post">
        <div class="form-group">
            <label for="name">New Role</label>
            <input name="name" class="form-control" type="text" />
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>

    <a asp-controller="Role" asp-action="UserList" class="btn btn-primary">List of users</a>
</div>

